    <!--copy from old -->

    <!--
     Base application theme, dependent on API level. This theme is replaced
     by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
 -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="zrodoHeadViewStyle">@style/zrodo_head_style</item>
    </style>

    <style name="Dialog_FullScreen" parent="android:Theme.NoTitleBar.Fullscreen">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <!--标题类textview的style -->
    <style name="titleFont">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">20sp</item>
    </style>

    <!--登录按钮style -->
    <style name="btn_login_style">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">25sp</item>
    </style>

    <!--页面头部bar的样式 -->
    <style name="zrodo_head_style" >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/headOfHeight</item>
        <item name="android:background">@drawable/header_background</item>
    </style>

    <!--数据列表展示列表头样式 -->
    <style name="data_statistic_listview_header_style">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@color/blue</item>
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">center</item>
    </style>

    <!--数据列表listview内容样式 -->
    <style name="data_statistic_listview_content_style">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@color/dark</item>
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">center</item>
    </style>

    <!-- 查询类按钮的样式-->
    <style name="queryButtonStyle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!--数据预警结果数据样式 -->
    <style name="dataWarningResultStyle">
        <item name="android:textColor">@color/dark</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!--样本采集信息字段字体样式 -->
    <style name="picSampleTxtStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/dark</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
    </style>


</resources>
