<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:id="@+id/mode_first_linear"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:orientation="horizontal">

        <ImageView
                android:id="@id/data_statistic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/statistic"
                android:layout_marginRight="10dp"/>

        <ImageView
                android:id="@id/data_warning"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/warning"
                android:layout_marginRight="10dp"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/message"
            android:layout_marginLeft="10dp"/>
    </LinearLayout>

    <LinearLayout
            android:id="@+id/mode_second_linear"
            android:layout_below="@id/mode_first_linear"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

        <ImageView
                android:id="@id/data_query"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/source"
                android:layout_marginRight="10dp"/>
<!-- 用户设置模块 -->
